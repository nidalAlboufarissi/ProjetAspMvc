@model IEnumerable<ProjetAspMvc.Models.Categorie>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
        </th>
        <th>
            Id
        </th>
        <th>
            Nom de Categorie
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.refcat, new { htmlAttributes = new { @class = "text-center" } })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomcat)
            </td>
            

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.refcat }) |
